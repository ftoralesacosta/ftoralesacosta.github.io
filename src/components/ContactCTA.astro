---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<div class="cta-group">
		<h2>Am I a good fit for a role?</h2>
		<CallToAction href="/assets/Fernando_MLE_Resume.pdf" download>
			Download Resume
			<Icon icon="document" size="1.2em" />
		</CallToAction>
	</div>

	<div class="cta-group">
		<h2>Interested in working together?</h2>
		<CallToAction href="mailto:fernandotta@gmail.com">
			Send Me a Message
			<Icon icon="paper-plane-tilt" size="1.2em" />
		</CallToAction>
	</div>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 4.5rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.cta-group {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		width: 100%;
	}

	h2 {
		font-size: var(--text-xl);
		text-align: left;
	}

	@media (min-width: 50em) {
		aside {
			padding: 6rem 7.5rem;
		}
		
		h2 {
			font-size: var(--text-2xl);
		}
	}
</style>
